<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nav_add_bookmark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:src="@drawable/ic_nav_add_bookmark"
            android:background="@drawable/button_select"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/nav_bookmark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:src="@drawable/ic_nav_bookmark"
            android:background="@drawable/button_select"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/nav_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:src="@drawable/ic_nav_history"
            android:background="@drawable/button_select"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/nav_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:src="@drawable/ic_nav_share"
            android:background="@drawable/button_select"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/nav_refresh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:src="@drawable/ic_nav_refresh"
            android:background="@drawable/button_select"
            android:scaleType="fitCenter"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nav_login"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:src="@drawable/ic_nav_login"
            android:background="@drawable/button_select"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/nav_download"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:src="@drawable/ic_nav_download"
            android:background="@drawable/button_select"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/nav_incognito"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:src="@drawable/ic_nav_incognito"
            android:background="@drawable/button_select"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/nav_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:src="@drawable/ic_nav_setting"
            android:background="@drawable/button_select"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/nav_exit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:src="@drawable/ic_nav_exit"
            android:background="@drawable/button_select"
            android:scaleType="fitCenter"/>

    </LinearLayout>
</LinearLayout>